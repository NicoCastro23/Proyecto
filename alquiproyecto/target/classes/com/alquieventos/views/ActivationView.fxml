<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alquieventos.controllers.ActivationController">
    <Label text="Ingrese el código de activación enviado a su correo electrónico" />
    <TextField fx:id="activationCodeField" promptText="Código de activación" />
    <Button text="Activar" onAction="#handleActivate" />
</VBox>



